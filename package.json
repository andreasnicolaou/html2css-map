{
  "name": "html2css-map",
  "version": "1.0.1",
  "description": "Extract inline styles into reusable CSS classes",
  "private": false,
  "main": "dist/bin/index.js",
  "bin": {
    "html2css-map": "dist/bin/index.js"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "test": "jest",
    "lint": "eslint --fix",
    "html2css": "npm run build && node dist/bin/index.js --input ./test --output ./custom.css --log ./custom-log.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andreasnicolaou/html2css-map.git"
  },
  "bugs": {
    "url": "https://github.com/andreasnicolaou/html2css-map/issues"
  },
  "author": {
    "name": "Andreas Nicolaou",
    "email": "anicolaou66@gmail.com"
  },
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.(ts)$": [
        "ts-jest"
      ]
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.18",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.3.3",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "inline-styles",
    "css-extractor",
    "style-map",
    "html-parser",
    "css-generator",
    "html-to-css",
    "dom-style-extraction",
    "typescript",
    "cli-tool",
    "cli",
    "frontend",
    "refactor-inline-css",
    "style-automation"
  ]
}
