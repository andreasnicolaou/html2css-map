{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es6", "dom", "ESNext"],
    "rootDir": "./",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "./types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "bin"]
}
